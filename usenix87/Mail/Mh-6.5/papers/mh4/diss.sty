	\def\\##1{[##1] }
	\ifnum\count@>1
	  \message{Warning: \number\count@\space undefined citations: \ref@set}
	\else
	  \message{Warning: One undefined citation: \ref@set}
	\fi
    \fi
  \endgroup	% End of \references group
}


