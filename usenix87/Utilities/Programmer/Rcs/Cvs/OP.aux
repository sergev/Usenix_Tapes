#
#		O p t i o n s
#	Script, to be included.
#
#	Collects options from $@ and puts them in $Options
#

GO_ON=true
while	# there may still be an option
	$GO_ON
do
	case $1 in
	-*)
		Options="$Options $1"
		shift
		;;
	*)
		GO_ON=false
		;;
	esac
done
